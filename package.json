{
  "name": "Pegasus-koa",
  "version": "1.0.0",
  "description": "Pegasus Back End",
  "main": "app.js",
  "author": "Gavin-Gong",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "serve": "nodemon dist/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js"
  },
  "dependencies": {
    "koa": "^2.0.39",
    "faker": "^4.1.0",
    "json-server": "^0.9.6",
    "koa-logger": "^2.0.1",
    "koa-router": "^7.1.1",
    "lodash": "^4.17.4",
    "mongoose": "^4.9.2",
    "@types/koa": "^2.0.39",
    "@types/koa-logger": "^2.0.1",
    "@types/koa-router": "^7.1.1",
    "@types/lodash": "^4.17.4",
    "@types/mongoose": "^4.0.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "json-server": "^0.9.6",
    "nodemon": "^1.11.0",
    "pm2": "^2.4.3",
    "tslint": "^5.5.0",
    "typescript": "^2.4.2"
  }
}
